@model IEnumerable<TeleECM.Office.Models.Task>
@{
    ViewData["Title"] = "Задачи";
}

<h2>Список задач</h2>

<p>
    <a asp-action="Create">Создать задачу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Дата
            </th>
            <th>
                Тема
            </th>
            <th>
                Статус
            </th>
            <th>
                Автор
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDateTime)
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Status.Title
                </td>
                <td>
                    @item.Author.ToString()
                </td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            @Html.ActionLink("Просмотреть", "Details", new { id = item.Id })
                        </li>
                        <li>
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                        </li>
                        <li>
                            @Html.ActionLink("Отменить", "Delete", new { id = item.Id })
                        </li>

                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
